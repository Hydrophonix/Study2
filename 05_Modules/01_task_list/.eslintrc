{
  parser: "babel-eslint",
  "extends": ["eslint:recommended"],
  "globals": {
    "document": true,
    "console": true,
    "localStorage": true,
    "window": true,
    "setTimeout": true,
    "clearTimeout": true,
    "$": true
  },
  "rules": {
    # classic
    "semi": [2],
    "no-console": [0],
    "no-undef": [0],
    "no-unused-vars": [1],
    "no-multi-spaces": [1],
    "no-trailing-spaces": [1],
    "indent": ["error", 2]
  }
}
