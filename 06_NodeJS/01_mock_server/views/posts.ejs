<!DOCTYPE html>
<html>
  <head>
    <title>Posts</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <a href="/"><button>BACK</button></a>
    <a href="/create/post/"><button>ADD POST</button></a>
    <div>
      <% for (var i = 0; i < data.length; i++) { %>
        <div class="post__item">
          <h1><%= data[i].postId %></h1>
          <img src="<%= data[i].imgUrl %>" alt="<%= data[i].userId %>">
          <div class="post__item__text">
            <p>Likes: <%= data[i].likeCount %></p>
            <p class="post__item__text--description"><%= data[i].description %></p>
          </div>
          <div class="btn__container">
            <a href='/edit/posts/<%= data[i].postId %>'>
              <button
                class="edit-button"
                data-type="posts"
                name="<%= data[i].postId %>"
              >
                EDIT
              </button>
          </a>
            <button
              class="delete-button"
              name="<%= data[i].postId %>"
            >
              DELETE
            </button>
          </div>
        </div>
      <% } %>
    </div>
    <script type="text/javascript" src="/js/deleteListener.js"></script>
  </body>
</html>
